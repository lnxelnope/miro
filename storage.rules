rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Food image thumbnails â€” uploaded by app after AI analysis
    // Path: food_images/{hashedDeviceId}/{date}/{entryId}.jpg
    match /food_images/{hashedDeviceId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.resource.size < 500 * 1024  // max 500 KB
                   && request.resource.contentType.matches('image/.*');
    }

    // Deny everything else by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
